{
  "compilerOptions": {
    "lib": [
      "es5",
      "es6"
    ],
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "rootDir": "./src",
    "esModuleInterop": true,
    "strict": true,
    "sourceMap": true,
    "strictPropertyInitialization": false,
    /* Experimental Options */
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
  },
  "ts-node": {
    "files": true
  },
  "files": [
    "./src/server.ts",
    "./src/types/global.d.ts"
  ],
}